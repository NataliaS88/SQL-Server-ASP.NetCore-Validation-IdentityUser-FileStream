@model Shop.Models.Product

    <div class="card text-center" style="        width: 150px;">
        <div></div>
        <img src="@Url.Content(Model.Image1)" style="height:100px; width: 100px" />
        <div class="card-body">
            <h3 class="card-title">@Model.Title</h3>
            <p class="card-text">@Model.ShortDescription</p>
            <h5 class="card-text">@Model.Date.ToShortDateString()</h5>
            <h4 class="card-title">@Model.Price NIS</h4>

            <div class="text-center">
                <a asp-action="ProductDetails" asp-route-id="@Model.Id">See product</a>
                <a asp-action="EditProduct" asp-route-id="@Model.Id">Edit</a>
                <a asp-action="DeleteProduct" asp-route-id="@Model.Id">Delete</a>
                <a asp-action="AddToCart" asp-route-id="@Model.Id">Add to cart</a>
            </div>
        </div>
    </div>